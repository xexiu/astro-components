---
import { Props } from './modal';
import './modal-styles.css';

const {
   id,
   classes = '',
   ariaLabel,
   modalBtnClass = '',
   headerClass = '',
   sectionClass = '',
   footerClass = '',
   closeBtnClass = '',
   btnText,
   btnCloseAriaLabel
}: Props = Astro.props;

function isPlainString(input: string): boolean {
   const pattern = /^[a-zA-Z0-9\s]*$/;

   return pattern.test(input);
}

if (!isPlainString(id)) {
   throw new Error('Invalid Props: id must be a plain string.');
}
---

<button
   onclick={`window.${id}.showModal()`}
   class:list={['btn-modal', modalBtnClass]}><slot name="open-modal" /></button
>

<dialog
   id={id}
   class:list={['dialog-container', classes]}
   aria-label={ariaLabel}
   role="dialog"
>
   <header class:list={['modal-header', headerClass]}>
      <slot name="modal-title" />
   </header>
   <section class:list={['modal-section', sectionClass]}>
      <slot name="modal-main" />
   </section>
   <footer class:list={['modal-footer', footerClass]}>
      <slot name="modal-footer" />
   </footer>
   <form method="dialog">
      <slot name="modal-close-button" />
      <button class:list={['close-btn-modal', closeBtnClass]} aria-label={btnCloseAriaLabel}>
         {btnText ? <span>{btnText}</span> :  <img
            src="/assets/icons-svg/icon-close.svg"
            alt="Cerrar Modal Icono"
            class="close-modal-icon"
         />}
      </button>
   </form>
</dialog>
