---
interface Props {
  tabTitle: string;
  index: number;
  firstChecked?: boolean;
  tabTitleClasses?: string;
}

const {
   tabTitle,
   index,
   firstChecked = false,
   tabTitleClasses = ''
} = Astro.props;
---

<button
   aria-controls={String(index)}
   role="tab"
   class:list={['tab-wrapper', `tab-${index}`, 'btn-blue', tabTitleClasses]}
>
   {
      firstChecked ? (
         <input
            autofocus="false"
            tabindex="-1"
            aria-hidden="true"
            class={`radio-tab radio-tab-${index}`}
            type="radio"
            checked
            name="radio-tab-input"
            id={`radio-tab-input-${index}`}
         />
      ) : (
         <input
            autofocus="false"
            tabindex="-1"
            aria-hidden="true"
            class={`radio-tab radio-tab-${index}`}
            type="radio"
            name="radio-tab-input"
            id={`radio-tab-input-${index}`}
         />
      )
   }
   <label
      class="tab tab-label"
      for={`radio-tab-input-${index}`}
   >
      {tabTitle}
   </label>
